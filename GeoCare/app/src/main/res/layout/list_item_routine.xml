<?xml version="1.0" encoding="utf-8"?>
<!-- list_item_routine.xml -->
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/border_blue"
    android:layout_marginTop="20dp"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp">


        <androidx.cardview.widget.CardView
            android:layout_width="85dp"
            android:layout_height="85dp"
            app:cardCornerRadius="100dp"
            android:id="@+id/ItemStatus"
            android:layout_centerVertical="true"
            app:cardBackgroundColor="@color/blue_deep" />

        <androidx.cardview.widget.CardView
            android:layout_width="78dp"
            android:layout_height="78dp"
            app:cardCornerRadius="100dp"
            android:id="@+id/ItemImgHolder1"
            android:layout_marginLeft="3.5dp"
            android:layout_centerVertical="true">
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/productImage">
            </ImageView>
        </androidx.cardview.widget.CardView>

        <LinearLayout
            android:id="@+id/layout1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_toRightOf="@id/ItemImgHolder1"
            android:layout_marginLeft="13dp"
            android:layout_centerVertical="true">

            <TextView
                android:id="@+id/productCategory"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Remover"
                android:textSize="16dp"
                android:fontFamily="@font/lato_semibold"
                android:textColor="@color/blue_deep" />

            <TextView
                android:id="@+id/productShortDescription"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Remove dust and makeup"
                android:fontFamily="@font/lato_regular"
                android:textColor="@color/blue_deep"
                android:textSize="14dp"
                android:layout_marginTop="7dp" />

            <TextView
                android:id="@+id/productAmount"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Pea-sized pump"
                android:fontFamily="@font/lato_regular"
                android:textColor="@color/blue_deep"
                android:textSize="12dp" />
        </LinearLayout>
    </RelativeLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="7dp"
        android:fontFamily="@font/lato_regular"
        android:text="Swipe to delete"
        android:textColor="@color/black"
        android:textSize="10dp"/>

</LinearLayout>