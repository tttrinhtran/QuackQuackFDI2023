<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/SplashHomeLayout2"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Home.SplashHome2">

    <TextView
        android:id="@+id/Splash2Title"
        android:layout_width="270dp"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginStart="20dp"
        android:layout_marginTop="130dp"
        android:text="Here is    your routine for today"
        android:fontFamily="@font/butler_medium"
        android:textSize="50sp"
        android:textColor="@color/blue_deep"/>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/Splash2_Item1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingVertical="25dp"
        android:background="@drawable/border_adapter"
        android:paddingHorizontal="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/Splash2Title"
        android:layout_marginHorizontal="20dp"
        android:layout_marginTop="47dp">

        <androidx.cardview.widget.CardView
            android:layout_width="85dp"
            android:layout_height="85dp"
            app:cardCornerRadius="100dp"
            android:id="@+id/ItemStatus1"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:cardBackgroundColor="@color/blue_deep"
            android:layout_marginStart="6dp"/>

        <androidx.cardview.widget.CardView
            android:layout_width="78dp"
            android:layout_height="78dp"
            app:cardCornerRadius="100dp"
            android:id="@+id/ItemImgHolder1"
            app:layout_constraintTop_toTopOf="@+id/ItemStatus1"
            app:layout_constraintBottom_toBottomOf="@+id/ItemStatus1"
            app:layout_constraintStart_toStartOf="@+id/ItemStatus1"
            app:layout_constraintEnd_toEndOf="@+id/ItemStatus1">
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/ItemImage1">
            </ImageView>
        </androidx.cardview.widget.CardView>

        <TextView
            android:id="@+id/itemStepName1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:fontFamily="@font/lato_semibold"
            android:text="Remover"
            android:textColor="@color/blue_deep"
            android:textSize="16sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@id/ItemStatus1"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.265" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/itemStepName1"
            app:layout_constraintStart_toEndOf="@id/ItemStatus1"
            android:layout_marginStart="16dp"
            android:layout_marginTop="3dp"
            android:text="Remove dust and makeup"
            android:fontFamily="@font/lato_regular"
            android:textSize="14sp"
            android:textColor="@color/blue_deep"/>
    </androidx.constraintlayout.widget.ConstraintLayout>


    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/Splash2_Item2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingVertical="25dp"
        android:background="@drawable/border_adapter"
        android:paddingHorizontal="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/Splash2_Item1"
        android:layout_marginHorizontal="20dp"
        android:layout_marginTop="24dp">

        <androidx.cardview.widget.CardView
            android:layout_width="85dp"
            android:layout_height="85dp"
            app:cardCornerRadius="100dp"
            android:id="@+id/ItemStatus2"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:cardBackgroundColor="@color/blue_deep"
            android:layout_marginStart="6dp"/>

        <androidx.cardview.widget.CardView
            android:layout_width="78dp"
            android:layout_height="78dp"
            app:cardCornerRadius="100dp"
            android:id="@+id/ItemImgHolder2"
            app:layout_constraintTop_toTopOf="@+id/ItemStatus2"
            app:layout_constraintBottom_toBottomOf="@+id/ItemStatus2"
            app:layout_constraintStart_toStartOf="@+id/ItemStatus2"
            app:layout_constraintEnd_toEndOf="@+id/ItemStatus2">
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/ItemImage2">
            </ImageView>
        </androidx.cardview.widget.CardView>

        <TextView
            android:id="@+id/itemStepName2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:fontFamily="@font/lato_semibold"
            android:text="Cleansing"
            android:textColor="@color/blue_deep"
            android:textSize="16sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@id/ItemStatus2"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.265" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/itemStepName2"
            app:layout_constraintStart_toEndOf="@id/ItemStatus2"
            android:layout_marginStart="16dp"
            android:layout_marginTop="3dp"
            android:text="Washing your face"
            android:fontFamily="@font/lato_regular"
            android:textSize="14sp"
            android:textColor="@color/blue_deep"/>
    </androidx.constraintlayout.widget.ConstraintLayout>


    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/Splash2_Item3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingVertical="25dp"
        android:background="@drawable/border_adapter"
        android:paddingHorizontal="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/Splash2_Item2"
        android:layout_marginHorizontal="20dp"
        android:layout_marginTop="24dp">

        <androidx.cardview.widget.CardView
            android:layout_width="85dp"
            android:layout_height="85dp"
            app:cardCornerRadius="100dp"
            android:id="@+id/ItemStatus3"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:cardBackgroundColor="@color/blue_deep"
            android:layout_marginStart="6dp"/>

        <androidx.cardview.widget.CardView
            android:layout_width="78dp"
            android:layout_height="78dp"
            app:cardCornerRadius="100dp"
            android:id="@+id/ItemImgHolder"
            app:layout_constraintTop_toTopOf="@+id/ItemStatus3"
            app:layout_constraintBottom_toBottomOf="@+id/ItemStatus3"
            app:layout_constraintStart_toStartOf="@+id/ItemStatus3"
            app:layout_constraintEnd_toEndOf="@+id/ItemStatus3">
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/ItemImage3">
            </ImageView>
        </androidx.cardview.widget.CardView>

        <TextView
            android:id="@+id/itemStepName3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:fontFamily="@font/lato_semibold"
            android:text="Moisturizer cream"
            android:textColor="@color/blue_deep"
            android:textSize="16sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@id/ItemStatus3"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.265" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/itemStepName3"
            app:layout_constraintStart_toEndOf="@id/ItemStatus3"
            android:layout_marginStart="16dp"
            android:layout_marginTop="3dp"
            android:text="Moisturize your skin"
            android:fontFamily="@font/lato_regular"
            android:textSize="14sp"
            android:textColor="@color/blue_deep"/>
    </androidx.constraintlayout.widget.ConstraintLayout>

    <Button
        android:id="@+id/Splash2Button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Go to Schedule"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/Splash2_Item3"
        android:layout_marginTop="15dp"/>




</androidx.constraintlayout.widget.ConstraintLayout>