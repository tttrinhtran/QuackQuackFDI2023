<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Create a solid grey rectangle as the background -->
    <item android:id="@android:id/background">
        <shape android:shape="rectangle">
            <solid android:color="#808080" /> <!-- Change this color to your desired grey shade -->
        </shape>
    </item>

    <!-- Create a gradient for the top edge -->
    <item>
        <shape android:shape="rectangle">
            <gradient
                android:startColor="#E2E2E2"
                android:centerColor="#E2E2E2"
                android:endColor="#FFFFFF"
                android:angle="90" /> <!-- Angle for the gradient (90 degrees for top edge) -->
        </shape>
    </item>

</layer-list>
